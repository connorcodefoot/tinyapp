<!DOCTYPE html>
<html lang="en">
  <body>
    <%- include('partials/_header') %>
    <main style="margin: 1em;">
      <h3>My URLs</h3>
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Short URL ID</th>
            <th scope="col">Long URL</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
          </tr>
        </thead>
        <tbody>
          <% for (let id in urls) { %>
            <tr>
              <td><%= id %></td>
              <td><%= urls[id] %></td>
              <td><form action="/urls/<%= id %>/" >
                <button type="submit" class="btn btn-outline-info">&#9998</button>
              </form>
              <td><form method="POST" action="/urls/<%= id %>/delete">
                <button type="submit" class="btn btn-outline-danger">Delete</button>
              </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>
    </main>
    <!-- Bootstrap JS -->
    <%- include('partials/_scripts') %>
  </body>
</html>